<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane fx:id="mainPane" prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.weblite.jdeployTemplateJavafxModularGradle.controller.MainController">
    <top>
        <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TextArea>
    </top>
    <center>
       <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
           <HBox>
               <VBox.margin>
                   <Insets top="20.0"/>
               </VBox.margin>
               <Pane HBox.hgrow="ALWAYS"/>
               <Button mnemonicParsing="false" text="%ui_dark" onAction="#toDark">
                   <graphic>
                       <FontIcon iconLiteral="mdi2m-moon-waxing-crescent"/>
                   </graphic>
               </Button>
               <Pane HBox.hgrow="ALWAYS"/>
               <Button mnemonicParsing="false" text="%ui_light" onAction="#toLight">
                   <graphic>
                       <FontIcon iconLiteral="mdi2w-weather-sunny"/>
                   </graphic>
               </Button>
               <Pane HBox.hgrow="ALWAYS"/>
           </HBox>
           <HBox>
               <VBox.margin>
                   <Insets top="20.0"/>
               </VBox.margin>
               <Pane HBox.hgrow="ALWAYS"/>
               <ChoiceBox fx:id="localChoiceBox" prefWidth="150.0"/>
               <Pane HBox.hgrow="ALWAYS"/>
           </HBox>
       </VBox>
   </center>
</BorderPane>
